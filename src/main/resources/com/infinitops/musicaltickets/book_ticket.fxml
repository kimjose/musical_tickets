                        </ComboBox>
                        <TextField promptText="Number of tickets">
                            <HBox.margin>
                                <Insets left="10.0"/>
                            </HBox.margin>
                        </TextField>
                        <Button mnemonicParsing="false" text="Book tickets">
                            <HBox.margin>
                                <Insets left="15.0"/>
                            </HBox.margin>
                        </Button>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
