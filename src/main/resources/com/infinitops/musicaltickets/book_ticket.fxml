<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.infinitops.musicaltickets.BookTicket">
    <children>
        <VBox prefHeight="400.0" prefWidth="928.0">
            <padding>
                <Insets bottom="10.0" right="10.0" top="10.0"/>
            </padding>
            <children>
                <HBox prefHeight="53.0" prefWidth="590.0">
                    <children>
                        <ComboBox prefHeight="26.0" prefWidth="191.0" promptText="Musical Event"/>
